<h1 class="py-4 text-center">Add Users</h1>
<div class="container row col-md-8 mx-auto shadow p-3">
    <%= form_with model: @employees do |form| %>
		<div class="mb-3">
			<%= form.label :Name , class: 'mb-2' %>
			<%= form.text_field :name , class: 'form-control' %>
		</div>
		<div class="mb-3">
			<%= form.label :Email , class: 'mb-2' %>
			<%= form.email_field :email , class: 'form-control' %>
		</div>
		<div class="mb-3">
			<%= form.label :Password , class: 'mb-2' %>
			<%= form.password_field :password , class: 'form-control' %>
		</div>
		<div class="mb-3">
			<%= form.label :Phone , class: 'mb-2' %>
			<%= form.number_field :phone , class: 'form-control' %>
		</div>
		<div class="mb-3">
			<%= form.label :Address , class: 'mb-2' %>
			<%= form.text_field :address , class: 'form-control' %>
		</div>
		<div class="mb-3">
			<%= form.submit class: 'btn btn-primary' %>
		</div>
	<% end %>
</div>
