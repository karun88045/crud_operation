<div class="container">
	<table class="table table-stripped table-hover table-bordered">
		<h4 class="text-center py-2">This is Document Model</h4>
		<%= link_to 'Add to Document', new_document_path, class: 'btn btn-primary my-2' %>
		<tbody class="table-dark">
			<tr>
				<th>Id</th>
				<th>Name</th>
				<th>Document Type</th>
				<th>Employee Id</th>
				<th>Employee Name</th>
				<th>Action</th>
			<tr/>
		</tbody>
		<% @documents.each do |d| %>
		<tbody>
			<tr>
				<td><%= d.id %></td>
				<td><%= d.name %></td>
				<td><%= d.doc_type %></td>
				<td><%= d.employee.id %></td>
				<td><%= d.employee.name %></td>
				<td class="d-flex">
					<%= link_to 'Edit', edit_document_path(d), class: 'btn btn-primary mx-2' %>
					<%= link_to 'View', document_path(d), class: 'btn btn-warning mx-2' %>
					<%= button_to 'Delete', document_path(d), class: 'btn btn-danger mx-2', method: :delete %>
				</td>
			<tr/>
		</tbody>
		<% end %>
	</table>
</div>