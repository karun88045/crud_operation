
<div class="container">
  <div class="row">
    <div class="col-md-6 col-lg-6 col-sm-12 shadow-lg p-3 mx-auto">

<h2>Forgot your password?</h2>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs form-group">
    <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email", class: 'form-control my-2' } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "reset password", class: 'form-control btn btn-primary' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>
</div>
</div>