
<div class="container">
  <div class="row">
    <div class="col-md-6 col-lg-6 col-sm-12 shadow-lg p-3 mx-auto">
        <h2 class="text-center">Log in</h2>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs form-group">
            <%= f.input :email, required: false, autofocus: true, input_html: { autocomplete: "email", class: 'form-control' } %>
            <%= f.input :password, required: false, input_html: { autocomplete: "current-password", class: 'form-control' } %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>
          <div class="form-actions">
            <%= f.button :submit, "Log in", class: 'form-control btn btn-primary' %>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
    </div>
  </div>
</div>