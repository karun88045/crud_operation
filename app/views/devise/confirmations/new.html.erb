
<div class="container">
  <div class="row">
    <div class="col-md-6 col-lg-6 col-sm-12 shadow-lg p-3 mx-auto">
<h2>Resend confirmation instructions</h2>

<%= simple_form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
  <%= f.error_notification %>
  <%= f.full_error :confirmation_token %>

  <div class="form-inputs form-group">
    <%= f.input :email,
                required: true,
                autofocus: true,
                value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email),
                input_html: { autocomplete: "email", class: 'form-control my-2' } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Resend confirmation", class: 'form-control btn btn-primary' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>
</div>
</div>
